<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
<bean id="byname" class="com.bridgelabz.spring.autowiring.Customer" autowire="byName">
<property name="name" value="Jayanta Roy" /> </bean>

<bean id="bytype" class="com.bridgelabz.spring.autowiring.Customer" autowire="byType">
<property name="name" value="Jayanta Roy" /> </bean>

<bean id="byconstructor" class="com.bridgelabz.spring.autowiring.Customer" autowire="constructor">
<property name="name" value="Jayanta Roy" /> </bean>

<bean name="addres" class="com.bridgelabz.spring.autowiring.Address" >
<property name="city" value="Block A 888, CA" />
<property name="zip" value="123456"/>
</bean>
	
</beans>